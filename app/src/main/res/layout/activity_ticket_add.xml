<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TicketAddActivity">
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="#00ff0000"
        android:onClick="mOnClick"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <EditText
        android:id="@+id/ticketTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="20dp"
        android:background="@null"
        android:textColorHint="@color/blue"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:hint="공연명" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <Button
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:onClick="mOnClick"
            android:text="2021년 0월 0일"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:onClick="mOnClick"
            android:text="오후 0시 0분"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seat"/>
    <EditText
        android:id="@+id/ticketSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:hint="1층 A구역 1열 1번"
        android:background="@color/lightYellow"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Cast"/>
    <EditText
        android:id="@+id/ticketCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:background="@color/lightYellow"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review"/>
    <EditText
        android:id="@+id/ticketReview"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:background="@color/lightYellow"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/gray"
        android:onClick="mOnClick"
        android:text="Save"/>
</LinearLayout>